<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogThemeOne" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorBoxDialog2</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:fontFamily">@font/kite_one</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DialogThemeThree" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorBoxDialog3</item>
